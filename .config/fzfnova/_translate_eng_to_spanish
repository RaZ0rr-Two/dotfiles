#!/usr/bin/env bash
# AUTHOR: gotbletu (@gmail|twitter|youtube|github|lbry)
#         https://www.youtube.com/user/gotbletu
# DESC:   translate text
# DEMO:   
# DEPEND: translate-shell

set -o vi
while true
do
  read -rep ">>> Translate English to Spanish: " INPUT
  history -s "$INPUT"
  trans en:es "$INPUT"
  printf "\n"
done
